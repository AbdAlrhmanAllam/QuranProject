<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SebhaFragment"
    android:background="@drawable/mainbackground">

    <TextView
        android:id="@+id/Total_Label_Tasbeha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Tasbeha"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"

        />
    <TextView
        android:id="@+id/Total_Count_Tasbeha"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="60dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Total_Label_Tasbeha"
        tools:text="222"
        android:layout_marginBottom="50dp"
        />
    <TextView
        android:id="@+id/Label_Tasbeha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasbeha"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"

        />

    <TextView
        android:id="@+id/Count_Tasbeha"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginEnd="50dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Label_Tasbeha"
        tools:text="222"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        />

    <ImageView
        android:id="@+id/Sebha"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/tasbeh"
        app:layout_constraintBottom_toTopOf="@id/Total_Label_Tasbeha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".3"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:id="@+id/sync"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@id/Total_Label_Tasbeha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_sync"
        android:layout_marginTop="70dp"
        tools:ignore="VectorDrawableCompat" />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>